<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tutorial_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<android.webkit.WebView
	    android:id="@+id/webviewTutorial"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/click_ok_view"
	    android:layout_alignParentTop="true" >
	</android.webkit.WebView>
	
	<LinearLayout 
	    android:id="@+id/click_ok_view"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:orientation="horizontal" >
	    "
	    <CheckBox android:id="@+id/never_show_it_again"
	    	android:layout_width="0dp"
	    	android:layout_weight="1"
		    android:layout_height="wrap_content"
	        android:text="@string/never_show_it_again"
	    />
		<Button
			android:id="@+id/btnOKIHaveKnown"
	    	android:layout_width="0dp"
	    	android:layout_weight="1"
		    android:layout_height="wrap_content"
			android:maxLines="2"
			android:text="@string/ok_i_have_known"
			android:drawableLeft="@drawable/verify"
			android:gravity="center|center_vertical"
		/>
	</LinearLayout>
</RelativeLayout>
