<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:id="@+id/lLayoutNormalInputPadCfg"
	    android:visibility="visible"
	    android:orientation="vertical" >
	
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
	    	<LinearLayout 
			    android:layout_width="0dip"
			    android:layout_weight="1"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
			    <TextView
			        android:id="@+id/txtViewInputPadName"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text="@string/inputpad_name_prompt" />
			
			    <EditText
			        android:id="@+id/edtTxtInputPadName"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        >
			        <requestFocus />
			    </EditText>
		    </LinearLayout>
			<LinearLayout 
			    android:layout_width="0dip"
			    android:layout_weight="1"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
			    <TextView
			        android:id="@+id/txtViewBtnKeyHeight"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text="@string/key_height_prompt" />
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal" >
				    <EditText
				        android:id="@+id/edtTxtTimesStandardHeight"
				        android:layout_width="0dip"
				        android:layout_weight="1"
				        android:layout_height="wrap_content"
				        android:singleLine="true"
					    android:maxLength="6"
					    android:inputType="numberDecimal"
				        >
				    </EditText>
				    <TextView
				        android:id="@+id/txtViewTimesStandardHeight"
				        android:layout_width="0dip"
				        android:layout_weight="2"
				        android:layout_height="wrap_content"
					    android:singleLine="true"
				        android:text="@string/times_standard_height" />
			    </LinearLayout>
		    </LinearLayout>
		</LinearLayout>
	    
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
			<LinearLayout 
			    android:layout_width="0dip"
			    android:layout_weight="3"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
				<TextView
			        android:id="@+id/txtViewInputPadLongName"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text="@string/inputpad_long_name_prompt" />
			
			    <EditText
			        android:id="@+id/edtTxtInputPadLongName"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:maxLength="64"
			        >
		    	</EditText>
		    </LinearLayout>
		</LinearLayout>
	    
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:visibility="gone"
		    >
			<LinearLayout 
			    android:layout_width="0dip"
			    android:layout_weight="2"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
			    <TextView
			        android:id="@+id/txtViewInputPadWrappedName"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:text="@string/inputpad_wrapped_name_1_2_prompt" />
			
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal" >
				
				    <EditText
				        android:id="@+id/edtTxtInputPadWrappedName1"
				        android:layout_width="0dip"
				        android:layout_weight="1"
				        android:layout_height="wrap_content"
				        android:singleLine="true"
				        android:maxLength="9"
				        >
				    </EditText>
				    <EditText
				        android:id="@+id/edtTxtInputPadWrappedName2"
				        android:layout_width="0dip"
				        android:layout_weight="1"
				        android:layout_height="wrap_content"
				        android:singleLine="true"
				        android:maxLength="9"
				        >
				    </EditText>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:orientation="vertical" >
			    <TextView
			        android:id="@+id/txtViewInputPadShortName"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text="@string/inputpad_short_name_prompt" />
			
			    <EditText
			        android:id="@+id/edtTxtInputPadShortName"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:maxLength="6"
			        >
			    </EditText>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    >
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    >
		
			    <TextView
			        android:id="@+id/txtViewPrevInputPad"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text=" " />
			    <Button
			        android:id="@+id/btnPrevInputPad"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:drawableLeft="@drawable/toleft_land"
			        />
			</LinearLayout>
		    <LinearLayout 
			    android:layout_width="0dip"
			    android:layout_weight="2"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    >
			    <TextView
			        android:id="@+id/txtViewNumofCols"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text="@string/inputpad_number_of_columns_prompt" />
			
			    <Spinner
			        android:id="@+id/spinnerNumofCols"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        >
			    </Spinner>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="0dip"
			    android:layout_weight="2"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    >
			    <TextView
			        android:id="@+id/txtViewVisibility"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text="@string/inputpad_visibility_prompt" />
				<CheckBox 
				    android:id="@+id/chkboxVisibility"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/inputpad_visible"
			        android:checked="true"
				    />
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    >
			
			    <TextView
			        android:id="@+id/txtViewNextInputPad"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
				    android:singleLine="true"
			        android:text=" " />
				<Button
			        android:id="@+id/btnNextInputPad"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
					android:drawableRight="@drawable/toright_land"
			        />
			</LinearLayout>
		</LinearLayout>
		<ScrollView 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:id="@+id/holderInputPadCfg"
				/>
		</ScrollView>
	</LinearLayout>
	<TextView 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/txtViewNoInputPad"
		android:text="@string/no_inputpad_defined"
		android:visibility="gone"
	   />
</LinearLayout>